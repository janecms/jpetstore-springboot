<!DOCTYPE logback>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern><![CDATA[date:%d{yyyy-MM-dd HH:mm:ss}\tthread:%thread\tlevel:%-5level\tlogger:%-48logger{48}\t[%line]\tmsg:%msg%n]]></pattern>
        </encoder>
    </appender>

    <appender name="ROLLING"
        class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>log/spring-jpetstore.log</File>
        <rollingPolicy
            class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>log/spring-petstore-%d{yyyyMMdd}.log
            </FileNamePattern>
            <MaxHistory>2</MaxHistory>
        </rollingPolicy>
        <encoder>
            <Pattern><![CDATA[date:%d{yyyy-MM-dd HH:mm:ss}\tthread:%thread\tlevel:%-5level\tlogger:%-48logger{48}\t[%line] \tmsg:%msg%n]]>
            </Pattern>
        </encoder>
    </appender>

    <!-- Application Loggers -->
    <logger name="com.hellojd.jpetstore">
        <level value="debug" />
    </logger>

    <!-- 3rdparty Loggers -->
    <logger name="org.springframework.validation">
        <level value="debug" />
    </logger>
    <logger name="org.springframework.context">
        <level value="debug" />
    </logger>
    <logger name="org.springframework.beans">
        <level value="debug" />
    </logger>

    <logger name="org.springframework.context">
        <level value="debug" />
    </logger>

    <logger name="org.springframework.web">
        <level value="debug" />
    </logger>

    <logger name="org.springframework.web.servlet">
        <level value="debug" />
    </logger>

    <logger
        name="org.springframework.context.support.PropertySourcesPlaceholderConfigurer">
        <level value="debug" />
    </logger>

    <logger name="org.springframework.security.core.userdetails">
        <level value="debug" />
    </logger>

    <logger
        name="org.springframework.jdbc.datasource.DataSourceTransactionManager">
        <level value="debug" />
    </logger>

    <logger name="jdbc.sqltiming">
        <level value="debug" />
    </logger>

    <root>
        <level value="debug" />
        <appender-ref ref="STDOUT" />
        <appender-ref ref="ROLLING" />
    </root>
</configuration>
